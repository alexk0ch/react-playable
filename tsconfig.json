{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2016", "es2017"]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}
